local all_pkgs
local all_cmds
local needed_pkgs
all_pkgs=(tree fzf trash-cli tldr btop fastfetch eza bat)
all_cmds=(tree fzf trash tldr btop fastfetch eza bat)
needed_pkgs=()

for ((i=0; i<${#all_pkgs[@]}; i++)); do
    if ! command -v "${all_cmds[$i]}" &> /dev/null; then
        ash_trace "common.packages" "Package ${all_pkgs[$i]} is not installed."
        needed_pkgs+=("${all_pkgs[$i]}")
    else
        ASH_PLUGS+=("${all_pkgs[$i]}")
    fi
done

if [[ ! ${#needed_pkgs[@]} -eq 0 ]]; then
    case $ASH_DISTRO in
        rhel)
            ;;
        arch)
            ;;
        MacOS)
            ;;
        debian)
            if [[ $(needed_pkgs[@]) =~ "eza" ]]; then
                sudo mkdir -p /etc/apt/keyrings
                wget -qO- https://raw.githubusercontent.com/eza-community/eza/main/deb.asc | sudo gpg --dearmor -o /etc/apt/keyrings/gierens.gpg
                echo "deb [signed-by=/etc/apt/keyrings/gierens.gpg] http://deb.gierens.de stable main" | sudo tee /etc/apt/sources.list.d/gierens.list
                sudo chmod 644 /etc/apt/keyrings/gierens.gpg /etc/apt/sources.list.d/gierens.list
                sudo apt update
            fi
            ;;
        *)
            echo "Unsupported distro: $ASH_DISTRO"
            ;;
    esac


    ash_info "common.packages" "Installing ${needed_pkgs[@]}"
    _ash_pkg_install ${needed_pkgs[@]}
    for plug in ${needed_pkgs[@]}; do
        ASH_PLUGS+=("$plug")
    done
fi
